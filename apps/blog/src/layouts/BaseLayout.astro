---
import "~/assets/styles/base.css";

import { ClientRouter } from "astro:transitions";
import MetaTags from "~/components/common/MetaTags.astro";
import BasicScripts from "~/components/common/BasicScripts.astro";

import type { MetaSEO } from "@repo/types";
import { SITE } from "~/config.mjs";

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = "en", textDirection = "ltr" } = SITE;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <ClientRouter />
    <MetaTags {...meta} />
    <slot name="head" />
  </head>

  <body class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-slate-900">
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
