---
import { BLOG, SITE } from "~/config.mjs";

import Layout from "~/layouts/PageLayout.astro";
import SinglePost from "~/components/blog/SinglePost.astro";
import ToBlogLink from "~/components/blog/ToBlogLink.astro";

import { getCanonical, getPermalink, getBlogPermalink } from "@repo/utils/permalinks";
import { fetchPosts } from "@repo/utils/blog";
import { findImage } from "@repo/utils/images";
import type { BreadcrumbItem } from "~/components/common/StructuredData.astro";

export async function getStaticPaths() {
  if (BLOG?.disabled || BLOG?.post?.disabled) return [];
  return (await fetchPosts()).map((post) => ({
    params: {
      blog: post.permalink,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const url = getCanonical(getPermalink(post.permalink, "post"));

// Handle image: if it's an AstroImage object, use it directly; otherwise try to find it
const imageForMeta = typeof post.image === "string" ? await findImage(post.image) : post.image?.src || null;

// Create breadcrumbs: Home > Blog > Post Title
const breadcrumbs: BreadcrumbItem[] = [
  {
    name: "Home",
    url: new URL("/", SITE.origin).toString(),
  },
  {
    name: "Blog",
    url: new URL(getBlogPermalink(), SITE.origin).toString(),
  },
  {
    name: post.title,
    url: url.toString(),
  },
];

const meta = {
  title: post.title,
  description: post.description,
  canonical: post.canonical || undefined,
  url: url,
  image: imageForMeta || undefined,
  noindex: BLOG?.post?.noindex,
  ogType: "article",
  post: post, // Pass the full post object for structured data
  updateDate: post.updateDate, // Pass update date for structured data
  breadcrumbs: breadcrumbs, // Pass breadcrumbs for structured data
};
---

<Layout {meta}>
  <SinglePost post={{ ...post, image: imageForMeta || undefined }} url={url} />
  <ToBlogLink />
</Layout>
